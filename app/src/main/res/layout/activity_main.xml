<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/main_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/black"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/game_title"
            android:textSize="30sp"
            android:textColor="@android:color/white"
            android:fontFamily="serif-monospace"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/gameTitleText"
            app:layout_constraintVertical_bias="0.295"
            android:textAlignment="center"
            android:textStyle="bold"/>
    <android.support.design.button.MaterialButton
            android:text="@string/start_button"
            android:textColor="@android:color/white"
            android:fontFamily="serif-monospace"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:id="@+id/gameTitleButton"
            android:layout_marginTop="8dp"
            app:layout_constraintVertical_bias="0.2"
            app:layout_constraintTop_toBottomOf="@+id/gameTitleText"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:textStyle="bold"
            android:textAlignment="center"
            android:background="@color/colorPrimaryDark"
            app:backgroundTint="@android:color/transparent"
            app:strokeColor="@android:color/white"
            app:cornerRadius="0dp"
            app:strokeWidth="2dp"
            style="@style/Widget.AppCompat.Button.Borderless" app:rippleColor="@color/colorPrimaryDark"
            android:onClick="startButtonPress"/>
    <TextView
            android:text="@string/copyright_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/copyrightTitleText"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:textAlignment="center"
            android:fontFamily="serif-monospace"
            android:textColor="@android:color/white"
            android:textStyle="bold"/>

</android.support.constraint.ConstraintLayout>